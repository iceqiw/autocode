<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.user.dao.UserDao">
  <resultMap id="BaseResultMap" type="com.test.user.model.User">
    <id column="id" property="id" jdbcType="INTEGER"/>
    <result column="name" property="name" jdbcType="VARCHAR"/>
    <result column="age" property="age" jdbcType="INTEGER"/>
  </resultMap>
  <sql id="Select_List">
    id,name,age
  </sql>
  <sql id="Filter_Condition">
    <if test="id != null">
      AND id = #{id,jdbcType=INTEGER}
    </if>
    <if test="name != null and name != ''">
      AND name = #{name,jdbcType=VARCHAR}
    </if>
    <if test="age != null">
      AND age = #{age,jdbcType=INTEGER}
    </if>
  </sql>
  <!--根据主键查询-->
  <select id="get" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select    
    <include refid="Select_List"/>
    from user    
    where id = #{id,jdbcType=INTEGER}    
  </select>
  <!--根据参数查询-->
  <select id="query" parameterType="com.test.user.model.User" resultMap="BaseResultMap">
    select    
    <include refid="Select_List"/>
    from user    
    <where>
      <include refid="Filter_Condition"/>
    </where>
  </select>
  <!--根据主键更新-->
  <update id="update" parameterType="com.test.user.model.User">
    update user    
    <set>
      <if test="name != null and name != ''">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="age != null">
        age = #{age,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}    
  </update>
  <!--单条插入-->
  <insert id="add" parameterType="com.test.user.model.User">
    insert into user (id,name,age)
    values (#{id,jdbcType=INTEGER},#{name,jdbcType=VARCHAR},#{age,jdbcType=INTEGER})
  </insert>
  <!--根据主键删除单条-->
  <delete id="delete" parameterType="java.lang.Integer">
    delete from user
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <!--根据主键批量删除-->
  <delete id="deleteList" parameterType="java.util.List">
    delete from user where id in    
    <foreach collection="list" item="item" open="(" separator="," close=")">
      #{item,jdbcType=INTEGER}
    </foreach>
  </delete>
</mapper>
